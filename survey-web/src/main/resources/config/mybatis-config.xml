<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <properties>
        <property name="dialect" value="MYSQL"/>
    </properties>

    <settings>
        <setting name="cacheEnabled" value="true"/>
        <setting name="lazyLoadingEnabled" value="false"/>
        <setting name="multipleResultSetsEnabled" value="true"/>
        <setting name="useColumnLabel" value="true"/>
        <setting name="useGeneratedKeys" value="true"/>
        <setting name="autoMappingBehavior" value="PARTIAL"/>
        <setting name="defaultExecutorType" value="SIMPLE"/>
        <setting name="defaultStatementTimeout" value="25000"/>
        <setting name="defaultExecutorType" value="REUSE"/>
        <setting name="logImpl" value="LOG4J2"/>
    </settings>

    <typeAliases>
        <typeAlias alias="Salary" type="com.yh.survey.domain.pojo.Salary"/>
        <typeAlias alias="SalaryCondition" type="com.yh.survey.domain.condition.SalaryCondition"/>
        <typeAlias alias="User" type="com.yh.survey.domain.pojo.User"/>
        <typeAlias alias="UserCondition" type="com.yh.survey.domain.condition.UserCondition"/>
        <typeAlias alias="Survey" type="com.yh.survey.domain.pojo.Survey"/>
        <typeAlias alias="SurveyCondition" type="com.yh.survey.domain.condition.SurveyCondition"/>
        <typeAlias alias="Bag" type="com.yh.survey.domain.pojo.Bag"/>
        <typeAlias alias="BagCondition" type="com.yh.survey.domain.condition.BagCondition"/>
        <typeAlias alias="Question" type="com.yh.survey.domain.pojo.Question"/>
        <typeAlias alias="QuestionCondition" type="com.yh.survey.domain.condition.QuestionCondition"/>
    </typeAliases>

    <plugins>
        <plugin interceptor="com.github.pagehelper.PageHelper">
            <property name="dialect" value="mysql"/>
            <property name="offsetAsPageNum" value="false"/>
            <property name="rowBoundsWithCount" value="false"/>
            <property name="pageSizeZero" value="true"/>
            <property name="reasonable" value="false"/>
            <property name="supportMethodsArguments" value="false"/>
            <property name="returnPageInfo" value="none"/>
        </plugin>
    </plugins>

    <!-- mapper文件 -->
    <mappers>
        <mapper resource="mapper/SalaryMapper.xml"/>
        <mapper resource="mapper/UserMapper.xml"/>
        <mapper resource="mapper/SurveyMapper.xml"/>
        <mapper resource="mapper/BagMapper.xml"/>
        <mapper resource="mapper/QuestionMapper.xml"/>
    </mappers>

</configuration>
